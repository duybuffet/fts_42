<% provide :title, t("admin.subject.show_subject") %>
<div class="col-md-10">
  <div class="page-header">
    <h1>
      <%= @subject.name %>
      <small>
        (<%= pluralize @subject.questions.size, t("admin.subject.question") %>)
      </small>
      <%= link_to t("admin.subject.add_question"), "#", class: "btn btn-primary" %>
    </h1>
  </div>
  <div>
    <h3><%= t "admin.subject.list_question" %></h3>
    <table class="table table-striped table-condensed table-hover table-responsive
      table-bordered">
      <tr>
        <th><%= t "admin.question.table.id" %></th>
        <th><%= t "admin.question.table.content" %></th>
        <th><%= t "admin.question.table.type" %></th>
        <th><%= t "admin.question.table.status" %></th>
        <th><%= t "admin.question.table.action" %></th>
      </tr>
      <%= render @subject.questions %>
    </table>
  </div>
</div>
