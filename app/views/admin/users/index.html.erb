<% provide :title, t("admin.user.manage_user") %>
<div class="col-md-10">
  <h1>
    <%= t "admin.user.users" %>
  </h1>
  <table class="table table-striped table-condensed table-hover table-responsive
    table-bordered">
    <tr>
      <th class="header-action"><%= t "admin.user.table.id" %></th>
      <th class="header-action"><%= t "admin.user.table.name" %></th>
      <th class="header-action"><%= t "admin.user.table.email" %></th>
      <th class="header-action"><%= t "admin.user.table.chatwork_id" %></th>
      <th class="header-action"><%= t "admin.user.table.role" %></th>
      <th class="col-sm-2"><%= t "admin.user.table.action" %></th>
    </tr>
    <%= render @users %>
  </table>
  <%= paginate @users %>
</div>
