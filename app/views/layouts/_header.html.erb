<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("project"), root_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to t("layouts.header.contribute"), questions_path %></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("user.profile"), edit_user_registration_path %></li>
              <li><%= link_to t("user.logout"), destroy_user_session_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("user.login"), new_user_session_path %></li>
          <li><%= link_to t("user.signup"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
